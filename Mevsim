using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Mevsim
{
    internal class Hafta_sonu
    {
        static void Main(string[] args)
        {
            
            Console.WriteLine("Seçmek istediğiniz mevsimi tuşlayınız.");
            Console.WriteLine("1-İlkbahar");
            Console.WriteLine("2-Yaz");
            Console.WriteLine("3-Sonbahar");
            Console.WriteLine("4-Kış");
            int mevsim=Convert.ToInt32(Console.ReadLine());
            if (mevsim == 1) { }
            else if (mevsim == 2) { }
            else if (mevsim == 3) { }
            else if (mevsim == 4) { }
            else
            {
                Console.WriteLine("1-4 arası tekrar bir tuş giriniz.");
                mevsim = Convert.ToInt32(Console.ReadLine());
            }
            switch (mevsim) 
            {
                case 1:
                    Console.WriteLine("Mart");
                    Console.WriteLine("Nisan");
                    Console.WriteLine("Mayıs");
                    Console.WriteLine("Hangisi ile ilgili bilgi almak istersiniz,1-3 arası tuşlayınız.");
                    int ay=Convert.ToInt32(Console.ReadLine());
                    switch (ay)
                    {
                        case 1:
                            Console.WriteLine("Mart: Baharın habercisi olarak doğanın yeniden canlanmaya başladığı aydır. ");
                            break;
                        case 2:
                            Console.WriteLine("Nisan: İlkbaharın tam ortasında, doğanın bütün renkleriyle yeniden hayata dönüşüne tanıklık edilir.");
                            break;
                        case 3:
                            Console.WriteLine("Mayıs: Çiçeklerin en güzel açtığı, baharın tam anlamıyla kendini hissettirdiği aydır.");
                            break;
                    }
                    break;
                case 2:
                    Console.WriteLine("Haziran");
                    Console.WriteLine("Temmuz");
                    Console.WriteLine("Ağustos");
                    Console.WriteLine("Hangisi ile ilgili bilgi almak istersiniz,1-3 arası tuşlayınız.");
                    int ay2 = Convert.ToInt32(Console.ReadLine());
                    switch (ay2)
                    {
                        case 1:
                            Console.WriteLine("Haziran: Yazın başlangıcını müjdeleyen sıcak günlerin yaşandığı aydır.");
                            break;
                        case 2:
                            Console.WriteLine("Temmuz: Sıcaklığın doruk noktasına ulaştığı, tatil ve dinlenme zamanlarının başladığı aydır.\r\n");
                            break;
                        case 3:
                            Console.WriteLine("Ağustos: Yazın sonbahara geçiş yaptığı, hala sıcak ve keyifli günlerin yaşandığı aydır.\r\n");
                            break;
                    }
                    break;
                case 3:
                    Console.WriteLine("Eylül");
                    Console.WriteLine("Ekim");
                    Console.WriteLine("Kasım");
                    Console.WriteLine("Hangisi ile ilgili bilgi almak istersiniz,1-3 arası tuşlayınız.");
                   int  ay3 = Convert.ToInt32(Console.ReadLine());
                    switch (ay3)
                    {
                        case 1:
                            Console.WriteLine("Eylül: Sonbaharın gelmeye başladığı, yaprakların renk değiştirdiği ve hava serinlemeye başladığı aydır.");
                            break;
                        case 2:
                            Console.WriteLine("Ekim: Sonbaharın tam ortasında, doğanın cömert bir şekilde meyve ve sebzelerle bizi beslediği aydır.");
                            break;
                        case 3:
                            Console.WriteLine("Kasım: Soğuk ve yağmurlu günlerin arttığı, doğanın kışa hazırlandığı aydır.");
                            break;
                    }
                    break;
                case 4:
                    Console.WriteLine("Aralık");
                    Console.WriteLine("Ocak");
                    Console.WriteLine("Şubat");
                    Console.WriteLine("Hangisi ile ilgili bilgi almak istersiniz,1-3 arası tuşlayınız.");
                    int ay4 = Convert.ToInt32(Console.ReadLine());
                    switch (ay4)
                    {
                        case 1:
                            Console.WriteLine("Aralık: Yılın son ayı, tatil sezonunun başladığı ve yeni bir yıla hazırlık yapmanın heyecanıyla dolu zamanların yaşandığı aydır.\r\n\r\n\r\n\r\n\r\n\r\n");
                            break;
                        case 2:
                            Console.WriteLine("cak: Yeni bir yılın başlangıcıyla birlikte umut dolu hayaller yeşerir.");
                            break;
                        case 3:
                            Console.WriteLine("Şubat: Aşkın ve sevginin en güzel hissedildiği aydır.");
                            break;
                    }
                    break;  
            }


        }
    }
}
